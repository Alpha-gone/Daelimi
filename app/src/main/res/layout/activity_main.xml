<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#8E8E8E"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#000000"
            android:text="Daelim FAQ"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llMessage">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="5">

            <EditText
                android:id="@+id/edtMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="질문을 입력하세요" />

            <ImageView
                android:id="@+id/imvPush"
                android:layout_width="13dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/push" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="10px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvSmartcampu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="imvSmartCampus"
            app:srcCompat="@mipmap/smartcampu" />

        <ImageView
            android:id="@+id/imvEveverytime"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="imvEverytime"
            app:srcCompat="@mipmap/everytime" />

        <ImageView
            android:id="@+id/imvNight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="imvColor"
            app:srcCompat="@mipmap/night" />

        <ImageView
            android:id="@+id/imvInquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/inquiry" />
    </LinearLayout>

</LinearLayout>